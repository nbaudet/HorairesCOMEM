<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#77F5F5F5"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/widget_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_weight="0.5"
		android:background="@drawable/rounded_edges_morning"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="AGL - T102\nHess Jean-Pierre"
        android:textColor="#FFF"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/widget_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.5"
        android:background="@drawable/rounded_edges_afternoon"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="AGL - T102\nHess Jean-Pierre"
        android:textColor="#FFF"
        android:textSize="15sp" />
    
</LinearLayout>
